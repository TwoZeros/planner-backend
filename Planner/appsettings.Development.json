{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Initial Catalog=Planner;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "LoggerSettings": {
    "OrderLogPath": "..\\MyLogs\\orderLog"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../Logs/logs.txt"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {}
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
